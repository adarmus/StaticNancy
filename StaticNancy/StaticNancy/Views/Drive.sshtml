<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>

<style type="text/css">

    body{
        font-family: "Source Sans Pro",Calibri,Candara,Arial,sans-serif;
    }
    
    .option{
        position: relative;
        color: black;
        background: #fff;
        margin-bottom: 5px;
        padding: 10px;
        border: solid 1px #aaa;
        min-height: 50px;
        cursor: pointer;
    }
    
</style>

<div class="container">
	Drive @Model.Drive <button onclick="onClick()" id="btn">?</button> <span id="progress" />
</div>

<script>
var drive = "@Model.Drive";
var rootUrl = getRootUrl(window.location.href);
var url = rootUrl + drive + "/status";

getStatus();

function getStatus(){
	var request = new XMLHttpRequest();
	request.onload = function () {
		showStatus(request.responseText);
	}

	request.open("GET", url, true);
	request.send();	
}

function getRootUrl(locationHref) {
    var i = locationHref.indexOf('/drive');
    if (i < 0) {
        return locationHref;
    } else {
        var root = locationHref.substring(0, i + 6);
        return root.concat('/');
    }
}

function showStatus(statusText){
	var drive = JSON.parse(statusText);
	var caption = "Nope";
	if (drive.mounted){
		caption = "Unmount";
	}
	else if (drive.canMount){
		caption = "Mount";
	}
    document.getElementById("btn").textContent = caption;
}

function onClick(){
	var method = "POST";
	var shouldBeAsync = true;

	var request = new XMLHttpRequest();
	request.onload = function () {
		var status = request.status; // HTTP response status, e.g., 200 for "200 OK"
		if (status == 200){
			document.getElementById("progress").textContent="Done";
			showStatus(request.responseText);
		}
		else {
			document.getElementById("progress").textContent="Error " + status;
		}
	}

	document.getElementById("progress").textContent = document.getElementById("btn").textContent + "ing...";
	request.open(method, url, shouldBeAsync);
	request.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
	request.send();	//postData);
}
</script>

</body>
</html>