<!DOCTYPE html>

<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <title></title>
</head>
<body>

<style type="text/css">

    body{
        font-family: "Source Sans Pro",Calibri,Candara,Arial,sans-serif;
    }
    
    .option{
        position: relative;
        color: black;
        background: #fff;
        margin-bottom: 5px;
        padding: 10px;
        border: solid 1px #aaa;
        min-height: 50px;
        cursor: pointer;
    }
    
</style>

<div class="container">
	Drive @Model.Drive <button onclick="onClick()" id="btn">?</button>
</div>

<script>
var drive = "@Model.Drive";
var url = "/drive/" + drive + "/status";

var request = new XMLHttpRequest();
request.onload = function () {
	showStatus(request.responseText);
}

request.open("GET", url, true);
request.send();	

function showStatus(statusText){
	var d = JSON.parse(statusText);
	if (d.mounted){
		document.getElementById("btn").textContent="Unmount";
	}
	else{
		document.getElementById("btn").textContent="Mount";
	}
}

function onClick(){
	var method = "POST";
	var shouldBeAsync = true;

	var request = new XMLHttpRequest();
	request.onload = function () {
		var status = request.status; // HTTP response status, e.g., 200 for "200 OK"
		showStatus(request.responseText);
		//var data = request.responseText; // Returned data, e.g., an HTML document.
		//alert('hi ' + data);
		//alert(status);
		//document.getElementById("results").textContent=data;
	}

	request.open(method, url, shouldBeAsync);

	request.setRequestHeader("Content-Type", "application/json;charset=UTF-8");
	request.send();	//postData);
}
</script>

</body>
</html>